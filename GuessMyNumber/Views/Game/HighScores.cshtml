@model IEnumerable<GuessMyNumber.Models.IGame>

@{
    ViewData["Title"] = "Ranking";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-striped text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GetId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberToGuess)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TryCount)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GetId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberToGuess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TryCount)
            </td>
        </tr>
}
    </tbody>
</table>
